server {
{#    listen {{ web_server_name }}:443 ssl;#}
{#    listen {{ service_port }};#}
    server_name {{ web_server_name }};
{#    ssl_certificate /etc/nginx/ssl/{{ web_server_name }}.crt;#}
{#    ssl_certificate_key /etc/nginx/ssl/{{ web_server_name }}.key;#}

    access_log  /var/log/www/{{ web_server_name }}/access.log;
    error_log   /var/log/www/{{ web_server_name }}/error.log;

    location / {
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Host $http_host;
        proxy_pass http://127.0.0.1:{{ service_port }}/;
        proxy_connect_timeout 300s;
        proxy_read_timeout 300s;
        client_max_body_size 10m;
    }

    location /static {
        alias {{ static_path }};
    }

}
